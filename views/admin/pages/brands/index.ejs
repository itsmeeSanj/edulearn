<div class="card shadow mb-4">
  <div
    class="card-header py-3 d-flex justify-content-between align-items-center"
  >
    <h6 class="m-0 font-weight-bold text-primary">Brand Management</h6>
    <a href="/admin/brands/add" class="btn btn-primary">
      <i class="las la-plus"></i> Add New Brand
    </a>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="brandTable"
        width="100%"
        cellspacing="0"
      >
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Brand Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (brands && brands.length > 0) { %> <% brands.forEach((brand,
          index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <% if (brand.img) { %>
              <img
                src="/uploads/<%= brand.img %>"
                alt="Brand Image"
                width="50"
                height="50"
              />
              <% } else { %> No Image <% } %>
            </td>
            <td><%= brand.name %></td>
            <td>
              <a
                href="/admin/brands/edit/<%= brand._id %>"
                class="btn btn-warning"
                >Edit</a
              >
              <button
                class="btn btn-danger delete-btn"
                data-id="<%= brand._id %>"
                data-bs-toggle="modal"
                data-bs-target="#deleteBrandModal-<%= brand._id %>"
              >
                Delete
              </button>
            </td>
          </tr>

          <div
            class="modal fade"
            id="deleteBrandModal-<%= brand._id %>"
            tabindex="-1"
            aria-labelledby="deleteBrandModalLabel-<%= brand._id %>"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5
                    class="modal-title"
                    id="deleteBrandModalLabel-<%= brand._id %>"
                  >
                    Confirm Delete
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <p>
                    Are you sure you want to delete
                    <strong><%= brand.name %></strong>?
                  </p>
                </div>
                <div class="modal-footer">
                  <form
                    action="/admin/brands/delete/<%= brand._id %>"
                    method="post"
                  >
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                      Delete Brand
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="4" class="text-center">No brands available.</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
