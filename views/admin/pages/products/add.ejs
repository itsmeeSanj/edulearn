<div class="container">
  <form action="<%= actionURL %>" method="POST">
    <div class="row mb-3">
      <% if (id) { %>
      <input type="hidden" name="id" value="<%= id %>" />
      <!-- Hidden input to keep _id -->
      <% } %>

      <div class="col-md-6">
        <label for="instrumentName" class="form-label">Instrument Name</label>
        <input
          type="text"
          class="form-control"
          id="instrumentName"
          name="name"
          value="<%= instrument ? instrument.InstrumentName : '' %>"
          required
        />
      </div>

      <div class="col-md-6">
        <label for="instrumentCurrentPrice" class="form-label"
          >Current Price ($)</label
        >
        <input
          type="number"
          class="form-control"
          id="instrumentCurrentPrice"
          step="0.01"
          name="curPrice"
          value="<%= instrument ? instrument.InstrumentCurentPrice : '' %>"
          required
        />
      </div>
    </div>

    <div class="row mb-3">
      <% if (id) { %>
      <div class="col-md-6">
        <label for="instrumentPrevPrice" class="form-label"
          >Previous Price ($)</label
        >
        <input
          type="number"
          class="form-control"
          id="instrumentPrevPrice"
          step="0.01"
          name="prevPrice"
          value="<%= instrument ? instrument.InstrumentPrevPrice : '' %>"
          disabled
        />
      </div>
      <% } %>

      <div class="col-md-6 mb-3">
        <label for="instrumentShortDesc" class="form-label"
          >Short Description</label
        >
        <input
          type="text"
          class="form-control"
          id="instrumentShortDesc"
          name="shortDescription"
          value="<%= instrument ? instrument.InstrumentShortDesc : '' %>"
          required
        />
      </div>
    </div>

    <div class="mb-3">
      <label for="instrumentFullDesc" class="form-label"
        >Full Description</label
      >
      <textarea
        class="form-control"
        id="instrumentFullDesc"
        rows="3"
        name="fullDescription"
        required
      >
<%= instrument ? instrument.InstrumentFullDesc : '' %></textarea
      >
    </div>

    <!-- <div class="mb-3">
      <label for="instrumentImage" class="form-label">Instrument Image</label>
      <input class="form-control" type="file" id="instrumentImage" />
    </div> -->

    <button type="submit" class="btn btn-primary">Save Instrument</button>
    <a href="/admin/products" class="btn btn-secondary">Cancel</a>
  </form>
</div>
