  <body>
    <section class="login_page register_page">
      <div class="login_wrap">
        <div class="login_wrap_top">
          <div class="login_title">
            <h2>Create your free online Account!</h2>
          </div>
          <form action="admin/register" id="register_form" method="POST">
            <div class="questionBlock">
              <label class="question" for="firstName">First Name</label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                placeholder="First Name"
                onkeyup="resetBordersFirstName()"
                required
              />
            </div>

            <div class="questionBlock">
              <label class="question" for="lastName">Last Name</label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                placeholder="Last Name"
                onkeyup="resetBordersLastName()"
                required
              />
            </div>

            <div class="questionBlock">
              <label class="question" for="email">Email Address</label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="your e-mail *"
                required
              />
            </div>

            <!-- 2nd Question Block div start -->
            <div class="questionBlock">
              <!-- 2nd Question label -->
              <label class="question" for="password">Choose a password</label>

              <input
                type="password"
                id="password"
                name="password"
                placeholder="Password"
                required
              />
            </div>
            <!-- 2nd Question Block div start -->
            <div class="questionBlock">
              <!-- 2nd Question label -->
              <label class="question" for="confirmPassword"
                >Confirm password</label
              >

              <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                placeholder="Confirm Password"
                onkeyup="resetBorderPassword()"
                required
              />
            </div>

            <button
              type="submit"
              id="submitBtn"
              value="submit"
              class="btn btn-primary"
            >
              Register
            </button>
          </form>
        </div>
        <div class="login_wrap_bottom">
          <p>Or <a href="login.html">Click here</a> to sign in your account.</p>
        </div>
      </div>
    </section>

    <div id="success_login" class="sucess-contact-msg"></div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
