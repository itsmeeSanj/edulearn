<%- include('../partial/header') %>

<!-- main starts here -->
<main>
  <div class="about_banner">
    <div class="container">
      <div class="about_banner_content">
        <h1><%= brandName %></h1>
        <p><%= brandDesc %></p>
      </div>
    </div>
  </div>

  <!--  -->
  <section class="list_course">
    <div class="container">
      <div class="row gap-4 gap-md-0">
        <div class="col-md-3">
          <div class="course_list_left">
            <div class="course_list_left_head d-flex">
              <h1>Filters</h1>
              <button class="btn d-block d-md-none d-lg-block">
                Clear All
              </button>
            </div>
            <div class="course_left_block">
              <h2>Video Duration</h2>
              <div class="course_left_conten">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    0-1 Hour (284)
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    1-3 Hour (14)
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    3-6 Hour (15)
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    6-7 Hour (38)
                  </label>
                </div>
              </div>
            </div>

            <div class="course_left_block">
              <h2>Level</h2>
              <div class="course_left_conten">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    Beginner (13)
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    Intermediate (2)
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    All Levels (1)
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    Expert (0)
                  </label>
                </div>
              </div>
            </div>
            <div class="course_left_block">
              <h2>Price</h2>
              <div class="course_left_conten">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    Paid (222)
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    Free (4)
                  </label>
                </div>
              </div>
            </div>
            <div class="course_left_block">
              <h2>Subtitle</h2>
              <div class="course_left_conten">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    English (84)
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                  />
                  <label class="form-check-label" for="flexCheckChecked">
                    Portugues (8)
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="course_list_right">
            <div class="course_light_head mb-3">
              <h1>All <%= brandName %></h1>
              <span>5 results</span>
            </div>
            <div class="course-list">
              <% productsData.forEach((product) => { %>
              <div class="course-item d-flex gap-2 gap-lg-3" data-id="4">
                <div>
                  <a href="/products/<%= product?.id %>">
                    <img
                      src="/uploads/<%= product.img %>"
                      alt="<%= product.title %>"
                    />
                  </a>
                </div>
                <div class="course-info">
                  <h2>
                    <a href="/products/<%= product?.id %>">
                      <%= product.title %>
                    </a>
                  </h2>
                  <p><%= product?.shortdesc %></p>
                  <div class="author">Jose Portilla, Pierian Training</div>
                  <p class="course_detail">
                    <span class="badge">Bestseller</span> 58.5 total hours â€¢ 61
                    lectures
                  </p>
                  <div class="course-rating">
                    <span class="price">CA$<%= product.price %></span>
                  </div>
                  <button
                    class="add_cart btn btn-primary mt-2 btn-sm"
                    id="add_cart"
                  >
                    Add to cart
                  </button>
                </div>
              </div>

              <% }); %>
            </div>
            <div class="pagination mt-4 text-center">
              <nav aria-label="Page navigation">
                <ul class="pagination">
                  <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                    </a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" href="#">1</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" href="#">2</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" href="#">3</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('../partial/footer') %>
